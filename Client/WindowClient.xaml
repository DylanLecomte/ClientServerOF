<Window x:Class="Client.WindowClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Client" Height="350" Width="525" >
    <Grid>
        <Label x:Name="label" Content="Client" HorizontalAlignment="Left" Margin="224,19,0,0" VerticalAlignment="Top"/>
        <Button x:Name="button_Send" Content="Envoyer" HorizontalAlignment="Left" Margin="300,82,0,0" VerticalAlignment="Top" Width="75"
                Command="{Binding SendMessageCommand}" CommandParameter="{Binding ElementName=textBox_Send, Path=Text}"/>
        <TextBox x:Name="textBox_Send" HorizontalAlignment="Left" Height="23" Margin="144,79,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="MsgReceivedTextBlock" Text="{Binding MessageReceived, StringFormat=Reçu: \{0\}}" Margin="144,123,142,167"/>
    </Grid>
</Window>
