<Window x:Class="Client.WindowPayment"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="WindowPayment" Height="300" Width="300">
    <Grid>
        <Button x:Name="button" Content="Payer" HorizontalAlignment="Left" Margin="116,212,0,0" Command="{Binding TempCommand}" CommandParameter="2" VerticalAlignment="Top" Width="75"/>
        <TextBox x:Name="textBox_CardNumber" HorizontalAlignment="Left" Height="23" Margin="37,42,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="213"/>
        <TextBox x:Name="textBox_CardDate" HorizontalAlignment="Left" Height="23" Margin="37,98,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="213"/>
        <TextBox x:Name="textBox_CardCrypto" HorizontalAlignment="Left" Height="23" Margin="37,154,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="144"/>
    </Grid>
</Window>
