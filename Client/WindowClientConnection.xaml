<Window x:Class="Client.WindowClientConnection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Connection" Height="250" Width="300">
    
    <Grid HorizontalAlignment="Left" Width="292">
        <TextBox x:Name="TextBoxLogin" HorizontalAlignment="Left" Height="23" Margin="64,52,0,0" TextWrapping="Wrap" Text="{Binding Login, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="165"/>
        <TextBox x:Name="textBoxPassword" HorizontalAlignment="Left" Height="23" Margin="64,112,0,0" TextWrapping="Wrap" Text="{Binding Password, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Top" Width="165"/>
        <Label x:Name="LabelLogin" Content="Login" HorizontalAlignment="Left" Margin="64,26,0,0" VerticalAlignment="Top"/>
        <Label x:Name="LabelPassword" Content="Password" HorizontalAlignment="Left" Margin="64,86,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.604,2.929"/>
        <Button x:Name="ButtonConnection" Content="Connection" HorizontalAlignment="Left" Margin="113,163,0,0" VerticalAlignment="Top" Width="75" 
                 Command="{Binding TryConnectionCommand}" >
        </Button>
    </Grid>
</Window>
